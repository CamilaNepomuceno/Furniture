@model FurnitureStore.Domain.Entities.Product

<div class="details">
    <dl class="dl-horizontal">
        <dd class="dl-horizontal-Name">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd>
            <hr />
        </dd>
        
        <dd>
            <img style="max-height:150px" src="~/Content/Furniture/ProductsImg/@Model.ImageUrl" alt="@Model.Name"/>
            <hr/>
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dd>
            <hr/>
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-left">
                    @Html.HiddenFor(x => x.Id)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-success" value="Add to cart" />
                </div>
            }
        </dd>

    </dl>

</div>
<div class="detailsBackToList">
    <p>
        <span> @Html.ActionLink("Back to List", "List") </span>
    </p>
</div>
